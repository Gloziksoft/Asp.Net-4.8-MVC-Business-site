@using www.pgsoftweb.sk_2023.Models.News
@model www.pgsoftweb.sk_2023.Models.News.NewsModel
@{
    Layout = null;
}

<div class="container">
    <div class="row margin-top-20">
        <div class="col-md-12">
            <h2><a href="@Url.Action("Web_Blog", "HomeSk")" target="_blank" hreflang="sk">Blog</a></h2>
            <p>
                Novinky, aktuality, zaujímavosti, návody a ďalšie informácie zo sveta programovania, tvorby webových, mobilných, Windows a iných aplikácií. 
            </p>
        </div><!-- /.col-md-12 -->
    </div>

    @{
        for (int i = 0; i < Model.Items.Count; i = i + 2)
        {
            <div class="row">
                <div class="col-md-6">
                    @if (Model.Items.Count > i)
                    {
                        <div class="blog-post">
                            <a href="@Model.Items[i].Url" target="_blank">
                                <div class="blog-text">
                                    <h3>@Model.Items[i].Title</h3>
                                    @MvcHtmlString.Create(Model.Items[i].Text)
                                </div>
                                <div class="blog-img">
                                    <img src="@Model.Items[i].ImgUrl" />
                                </div>
                            </a>
                            <a class="blog-btn" href="@Model.Items[i].Url" target="_blank">Prečítať ...</a>
                        </div>
                    }
                </div><!-- /.col-md-6 -->
                <div class="col-md-6">
                    @if (Model.Items.Count > i + 1)
                    {
                        <div class="blog-post">
                            <a href="@Model.Items[i+1].Url" target="_blank">
                                <div class="blog-text">
                                    <h3>@Model.Items[i + 1].Title</h3>
                                    @MvcHtmlString.Create(Model.Items[i + 1].Text)
                                </div>
                                <div class="blog-img">
                                    <img src="@Model.Items[i+1].ImgUrl" />
                                </div>
                            </a>
                            <a class="blog-btn" href="@Model.Items[i+1].Url" target="_blank">Prečítať ...</a>
                        </div>
                    }
                </div><!-- /.col-md-6 -->
            </div>
        }
    }
</div>
