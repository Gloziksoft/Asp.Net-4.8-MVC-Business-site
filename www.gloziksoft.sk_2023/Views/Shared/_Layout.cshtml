    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="copyright" content="Copyright (c) Gloziksoft,  All rights reserved." />
    <meta name="Keywords" content="software, applications, design, development, web" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="language" content="en" />
    <meta name="content-language" content="en" />
    <meta name="author" content="Gloziksoft - www.gloziksoft.sk" />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="@Url.Content("~/images/contact.png")" />
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/bootstrap-theme.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/site.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/font-awesome.min.css")" rel="stylesheet">

    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery-3.4.1.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery.unobtrusive-ajax.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/Pgsoftweb.GoogleAnalytics-1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/bootstrap.jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/scroll.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/document.ready.min.js")"></script>

    @if (System.Configuration.ConfigurationManager.AppSettings["recaptchaVersion"] == "pgsoftweb")
    {
        <script type="text/javascript" src="@Url.Content("~/Content/js/Pgsoftweb.api.min.js")"></script>
    }
    else
    {
        @MvcHtmlString.Create(new www.gloziksoft.sk_2023.Models.GoogleRecaptcha().HtmlHead("en"))
    }


    <title>@ViewBag.Title | Gloziksoft</title>
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <i id="menuIcon" class="menu-icon fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" hreflang="en"><img class="header-logo" src="@Url.Content("~/images/gloziksoft_logo.png")" alt="Gloziksoft, s.r.o." /></a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li class="@ViewBag.CssClassMenuWeb">@Html.ActionLink("Website design", "Web", "Home", null, new { @hreflang = "en" })</li>
                    <li class="@ViewBag.CssClassMenuPrice">@Html.ActionLink("Price", "Price", "Home", null, new { @hreflang = "en" })</li>
                    <li class="@ViewBag.CssClassMenuContact">@Html.ActionLink("Contact", "Contact", "Home", null, new { @hreflang = "en" })</li>
                    <li class="navbar-divider"></li>
                    <li>@Html.ActionLink("SK", (string)ViewBag.LangAction, (string)ViewBag.LangControllerSk, null, new { @hreflang = "sk" })</li>
                    <li>@Html.ActionLink("EN", (string)ViewBag.LangAction, (string)ViewBag.LangControllerEn, null, new { @hreflang = "en" })</li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <video class="portfolio" playsinline autoplay muted loop>
        <source src="@Url.Content("~/Content/video/portfolio.webm")" type="video/webm">
        <source src="@Url.Content("~/Content/video/portfolio.mp4")" type="video/mp4">
    </video>

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <p class="headline">Our services</p>
                    <ul class="our-services">
                        <li><a href="@Url.Action("Web", "Home")" hreflang="en">Website design</a></li>
                    </ul>
                </div><!-- /.col-md-3 -->
                <div class="col-md-6">
                    <p class="headline">About us</p>
                    <p>
                        Gloziksoft,We develop customized websites, e-shops, microsites, and blogs.
                    </p>
                    <p class="socials">
                        <a class="square-icon" href="https://www.facebook.com/profile.php?id=61557529204426" target="_blank" title="Facebook"><i class="fa fa-facebook fa-fw"></i></a>
                        <a class="square-icon" href="https://twitter.com/peto7724/" target="_blank" title="Twitter"><i class="fa fa-twitter fa-fw"></i></a>
                        <a class="square-icon" href="https://www.instagram.com/gloziksoft/" target="_blank" title="Instagram"><i class="fa fa-instagram fa-fw"></i></a>
                        <a class="square-icon" href="https://www.youtube.com/channel/UC3E2HG-oAKHp6XQ0CP6ZtEg" target="_blank" title="YoutTube"><i class="fa fa-youtube fa-fw"></i></a>
                        <a class="square-icon" href="https://github.com/Peto777" target="_blank" title="GitHub"><i class="fa fa-github fa-fw"></i></a>
                        <a class="square-icon" href="@Url.Action("Web_BlogNews", "HomeSk")" hreflang="en"><i class="fa fa-bars fa-fw"></i></a>
                    </p>
                </div><!-- /.col-md-6 -->
                <div class="col-md-3">
                    <p class="headline">Where to find us</p>
                    <p class="contact">
                        <span class="rounded-icon"><i class="fa fa-map-marker fa-fw"></i></span> Školská 1573/31, Hriňová, Slovakia<br />
                        <span class="rounded-icon"><i class="fa fa-phone fa-fw"></i></span> +421 949 317 231<br />
                        <span class="rounded-icon"><i class="fa fa-envelope fa-fw"></i></span> gloziksoft@gloziksoft.sk<br />
                        <span class="rounded-icon"><i class="fa fa-sitemap fa-fw"></i></span> <a href="@Url.Action("Sitemap", "Home")" hreflang="en">Sitemap</a><br />
                        <span class="rounded-icon"><i class="fa fa-globe fa-fw"></i></span>
                        @Html.ActionLink("SK", (string)ViewBag.LangAction, (string)ViewBag.LangControllerSk, null, new { @hreflang = "sk" })
                        @Html.ActionLink("EN", (string)ViewBag.LangAction, (string)ViewBag.LangControllerEn, null, new { @hreflang = "en" })

                    </p>
                </div><!-- /.col-md-3 -->
            </div>
        </div>
    </footer>

    <a href="#" class="scrollToTop" title="Scroll to Top"><i class="fa fa-arrow-circle-up fa-2x"></i></a>

    @RenderSection("scripts", required: false)
</body>
</html>
